<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_item_job_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="4dp"
        android:text="Crime Title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_item_description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/list_item_job_title_text_view"
        android:lines="3"
        android:maxLines="3"
        android:padding="4dp"
        android:text="Job Description" />

    <TextView
        android:id="@+id/list_item_view_dates_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/list_item_description_text_view"
        android:padding="4dp"
        android:text="Dates"
        android:layout_marginBottom="10dp" />
</RelativeLayout>